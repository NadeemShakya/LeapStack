{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-leapfrog",
    "plugin:react/recommended",
    "eslint-config-airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "func-names": "off",
    "require-jsdoc": "warn",
    "class-methods-use-this": "off",
    "no-use-before-define": ["error", { "functions": false }]
  }
}
